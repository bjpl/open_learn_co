# ============================================================================
# FRONTEND ENVIRONMENT CONFIGURATION
# Colombia Intelligence & Language Learning Platform
# ============================================================================

# ----------------------------------------------------------------------------
# APPLICATION ENVIRONMENT
# ----------------------------------------------------------------------------
# Node environment
# Type: string
# Required: Yes
# Options: development, production, test
# Default: development
NODE_ENV=development

# ----------------------------------------------------------------------------
# BACKEND API CONFIGURATION
# ----------------------------------------------------------------------------
# Backend API base URL
# Type: url
# Required: Yes
# Format: http://host:port or https://domain.com
# Development: http://localhost:8000
# Production: https://api.yourdomain.com
NEXT_PUBLIC_API_URL=http://localhost:8000

# WebSocket URL for real-time updates (if applicable)
# Type: url
# Required: Optional
# Format: ws://host:port/ws or wss://domain.com/ws
NEXT_PUBLIC_WS_URL=ws://localhost:8000/ws

# ----------------------------------------------------------------------------
# BUILD CONFIGURATION
# ----------------------------------------------------------------------------
# Generate source maps for debugging
# Type: boolean
# Required: No
# Default: true
# Note: Set to false in production for smaller bundle size
GENERATE_SOURCEMAP=true

# Bundle analyzer (for development/optimization)
# Type: boolean
# Required: No
# Default: false
ANALYZE=false

# ----------------------------------------------------------------------------
# PERFORMANCE CONFIGURATION
# ----------------------------------------------------------------------------
# Enable performance monitoring
# Type: boolean
# Required: No
# Default: true
NEXT_PUBLIC_ENABLE_PERFORMANCE_MONITORING=true

# Bundle size limit (KB)
# Type: integer
# Required: No
# Default: 500
NEXT_PUBLIC_BUNDLE_SIZE_LIMIT=500

# ----------------------------------------------------------------------------
# FEATURE FLAGS
# ----------------------------------------------------------------------------
# Enable analytics tracking
# Type: boolean
# Required: No
# Default: false
NEXT_PUBLIC_ENABLE_ANALYTICS=false

# Enable error reporting (Sentry, etc.)
# Type: boolean
# Required: No
# Default: false
NEXT_PUBLIC_ENABLE_ERROR_REPORTING=false

# Enable charts (Recharts - lazy loaded)
# Type: boolean
# Required: No
# Default: true
NEXT_PUBLIC_ENABLE_CHARTS=true

# Enable analytics page
# Type: boolean
# Required: No
# Default: true
NEXT_PUBLIC_ENABLE_ANALYTICS_PAGE=true

# Enable trends page
# Type: boolean
# Required: No
# Default: true
NEXT_PUBLIC_ENABLE_TRENDS=true

# ----------------------------------------------------------------------------
# THIRD-PARTY SERVICES (Optional)
# ----------------------------------------------------------------------------
# Google Analytics Tracking ID
# Type: string
# Required: No
NEXT_PUBLIC_GA_TRACKING_ID=

# Sentry DSN for frontend error tracking
# Type: url
# Required: No
NEXT_PUBLIC_SENTRY_DSN=

# ----------------------------------------------------------------------------
# DEVELOPMENT CONFIGURATION
# ----------------------------------------------------------------------------
# Port for Next.js development server
# Type: integer
# Required: No
# Default: 3000
PORT=3000

# Hostname for development server
# Type: string
# Required: No
# Default: localhost
HOSTNAME=localhost
