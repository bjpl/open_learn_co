# ============================================================================
# DEVELOPMENT ENVIRONMENT CONFIGURATION
# OpenLearn Colombia - Colombian Intelligence & Language Learning Platform
# ============================================================================
#
# This file contains SAFE defaults for local development.
# DO NOT use these values in production!
#
# Quick Start:
#   1. Copy this file: cp .env.development .env
#   2. Generate secret key: python scripts/generate_secret_key.py
#   3. Update database credentials if needed
#   4. Start development: uvicorn app.main:app --reload
#
# ============================================================================

# ----------------------------------------------------------------------------
# APPLICATION SETTINGS
# ----------------------------------------------------------------------------
APP_NAME="OpenLearn Colombia - Development"
ENVIRONMENT=development
DEBUG=true

# API Configuration
API_V1_PREFIX=/api/v1
ALLOWED_HOSTS=*

# ----------------------------------------------------------------------------
# SECURITY CONFIGURATION (Development Only)
# ----------------------------------------------------------------------------
# WARNING: This is a development-only key. Generate a new one for production!
SECRET_KEY=dev-insecure-key-replace-in-production-with-generated-key
ACCESS_TOKEN_EXPIRE_MINUTES=1440
REFRESH_TOKEN_EXPIRE_DAYS=30

# ----------------------------------------------------------------------------
# DATABASE CONFIGURATION
# ----------------------------------------------------------------------------
# PostgreSQL (Local Development)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=openlearn
POSTGRES_PASSWORD=openlearn123
POSTGRES_DB=openlearn_dev

# Connection Pool (Development - Lower values)
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10
DB_POOL_TIMEOUT=30
DB_ECHO=true

# ----------------------------------------------------------------------------
# CACHE & SESSION STORAGE
# ----------------------------------------------------------------------------
# Redis (Local Development - No password)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# ----------------------------------------------------------------------------
# SEARCH ENGINE
# ----------------------------------------------------------------------------
# Elasticsearch (Local Development)
ELASTICSEARCH_HOST=localhost
ELASTICSEARCH_PORT=9200
ELASTICSEARCH_INDEX=openlearn_dev

# ----------------------------------------------------------------------------
# CORS CONFIGURATION (Development)
# ----------------------------------------------------------------------------
# Allow all localhost ports for frontend development
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:8000,http://127.0.0.1:3000
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=*
CORS_ALLOW_HEADERS=*

# ----------------------------------------------------------------------------
# COLOMBIAN DATA SOURCES (Optional - Leave empty for development)
# ----------------------------------------------------------------------------
DANE_API_KEY=
BANREP_BASE_URL=https://www.banrep.gov.co/api
SECOP_API_TOKEN=
DATOS_GOV_BASE_URL=https://www.datos.gov.co/api
IDEAM_API_KEY=
DNP_API_KEY=
MINHACIENDA_API_KEY=

# ----------------------------------------------------------------------------
# WEB SCRAPING CONFIGURATION (Development)
# ----------------------------------------------------------------------------
ENABLE_SCHEDULER=true
SCRAPING_INTERVAL_MINUTES=60
MAX_CONCURRENT_SCRAPERS=3
SCRAPER_TIMEOUT=30
SCRAPER_RATE_LIMIT=5
SCRAPER_USER_AGENT="OpenLearn Development Bot 1.0"
SCRAPER_MAX_RETRIES=2
SCRAPER_CONCURRENT_LIMIT=3

# ----------------------------------------------------------------------------
# NATURAL LANGUAGE PROCESSING (Development)
# ----------------------------------------------------------------------------
# Use small model for faster development
NLP_MODEL=es_core_news_sm
NLP_BATCH_SIZE=16
NLP_MAX_LENGTH=1000000

# ----------------------------------------------------------------------------
# TASK QUEUE (Development - Uses Redis)
# ----------------------------------------------------------------------------
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/1

# ----------------------------------------------------------------------------
# LOGGING & MONITORING (Development - Verbose)
# ----------------------------------------------------------------------------
# Verbose logging for debugging
LOG_LEVEL=DEBUG
LOG_DIR=logs
LOG_ENABLE_CONSOLE=true
LOG_ENABLE_FILE=true
LOG_MAX_BYTES=10485760
LOG_BACKUP_COUNT=3
LOG_FORMAT=text

# Performance Monitoring
METRICS_ENABLED=true
METRICS_PORT=9090
HEALTH_CHECK_INTERVAL=60
SLOW_REQUEST_THRESHOLD_MS=2000.0
ENABLE_PERFORMANCE_LOGGING=true

# Error Tracking (Optional - Sentry)
SENTRY_DSN=
SENTRY_ENVIRONMENT=development
SENTRY_TRACES_SAMPLE_RATE=1.0

# ----------------------------------------------------------------------------
# ALERTING CONFIGURATION (Development - Disabled)
# ----------------------------------------------------------------------------
# Email Alerts (Not configured for development)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
ALERT_EMAIL_FROM=
ALERT_EMAIL_TO=

# Slack Alerts (Not configured for development)
SLACK_WEBHOOK_URL=
SLACK_CHANNEL=#dev-alerts

# ----------------------------------------------------------------------------
# PYTHON CONFIGURATION
# ----------------------------------------------------------------------------
PYTHONPATH=/app
