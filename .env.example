# Colombia Intelligence & Language Learning Platform
# Environment Configuration

# Security
SECRET_KEY=your-secret-key-here-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_HOURS=24

# Database
DATABASE_URL=postgresql://user:password@localhost/colombia_intel
DATABASE_POOL_SIZE=5
DATABASE_MAX_OVERFLOW=10

# Application
APP_NAME=OpenLearn Colombia
APP_VERSION=1.0.0
DEBUG=False
ENVIRONMENT=development

# API Keys (Colombian Data Sources)
DATOS_GOV_CO_API_KEY=
IDEAM_API_KEY=
DANE_API_KEY=

# NLP Services
OPENAI_API_KEY=
ANTHROPIC_API_KEY=
HUGGINGFACE_API_KEY=

# Redis Cache
REDIS_URL=redis://localhost:6379/0
CACHE_TTL=3600

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:8000
CORS_ALLOW_CREDENTIALS=True

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Email (for password reset)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
EMAIL_FROM=noreply@openlearn.co

# Frontend
FRONTEND_URL=http://localhost:3000

# Monitoring
SENTRY_DSN=
PROMETHEUS_ENABLED=False

# Storage
UPLOAD_PATH=./uploads
MAX_UPLOAD_SIZE=10485760

# Colombian Spanish NLP
DEFAULT_LANGUAGE=es-CO
SUPPORTED_LANGUAGES=es,en

# Web Scraping
SCRAPING_USER_AGENT=OpenLearn/1.0 (Educational Research)
SCRAPING_TIMEOUT=30
SCRAPING_MAX_RETRIES=3
SCRAPING_DELAY=1

# Learning Platform
DEFAULT_DIFFICULTY_LEVEL=A1
WORDS_PER_PRACTICE_SESSION=10
MASTERY_THRESHOLD=0.8